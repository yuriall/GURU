<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F4F2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:backgroundTint="@color/mindfulBrown_20"
        android:text="@string/back"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="65dp"
        android:text="전시 상황 알쓸신잡"
        android:textColor="@color/mindfulBrown_80"
        android:textSize="45dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text=": 알아두면 쓸모있는 신기한 잡학지식"
        android:textColor="@color/mindfulBrown_80"
        android:textSize="20dp"
        android:textStyle="bold" />

    <android.widget.Button
        android:id="@+id/button1"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/solid_button"
        android:backgroundTint="@color/green_50"
        android:gravity="center"
        android:text="이것 모르면 대피 못 한다!\n경보의 종류"
        android:textColor="@color/mindfulBrown_80"
        android:textSize="20dp"
        android:textStyle="bold" />


    <android.widget.Button
        android:id="@+id/button2"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/solid_button"
        android:backgroundTint="@color/green_50"
        android:gravity="center"
        android:text="'저 사람 좀 수상한 것 같아..'\n전시 상황 신고 대상"
        android:textColor="@color/mindfulBrown_80"
        android:textSize="20dp"
        android:textStyle="bold" />

    <android.widget.Button
        android:id="@+id/button3"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/solid_button"
        android:backgroundTint="@color/green_50"
        android:gravity="center"
        android:text="생존 가방을 미리 챙겨두라던데\n무엇을 챙겨야할까?"
        android:textColor="@color/mindfulBrown_80"
        android:textSize="20dp"
        android:textStyle="bold" />

    <android.widget.Button
        android:id="@+id/button4"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/solid_button"
        android:backgroundTint="@color/green_50"
        android:gravity="center"
        android:text="공습경보가 울렸다면!\n대피해야할까 집에 있어야할까?"
        android:textColor="@color/mindfulBrown_80"
        android:textSize="20dp"
        android:textStyle="bold" />


</LinearLayout>